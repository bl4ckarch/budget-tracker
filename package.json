{
  "name": "budget-tracker-fullstack",
  "version": "1.0.0",
  "description": "Application de gestion budgétaire basée sur le salaire mensuel",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/app.ts",
    "dev:server-only": "tsx watch server/app.ts",
    "start": "tsx server/app.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc -p tsconfig.app.json && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:start": "npm run build && node dist/server/app.js",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:reset": "rm -f budget_tracker.db && npm run dev:server-only",
    "db:backup": "cp budget_tracker.db budget_tracker_backup_$(date +%Y%m%d_%H%M%S).db",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "budget",
    "tracker",
    "finance",
    "fullstack",
    "react",
    "nodejs",
    "sqlite",
    "salary-based"
  ],
  "author": "Votre nom",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.2.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
